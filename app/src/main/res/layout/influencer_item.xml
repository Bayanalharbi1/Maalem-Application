<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/ripple_effect_raised"

    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/input_circle"
        android:padding="10dp"
     >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_user_side"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_person"
           />

    </FrameLayout>

    <TextView
        android:id="@+id/name_user_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/user_name_edt"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/location_txt_user_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/ic1"
        android:padding="5dp"
        android:text="@string/location"
        android:textSize="11sp" />

</LinearLayout>