<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.UploadImgFragment">

    <ImageView
        android:id="@+id/uploaded_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:src="@drawable/image_gallery"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/uploadImage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/camera_fragment"
        android:textColor="@color/main_color"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploaded_image" />

    <ProgressBar
        android:id="@+id/progress_upload"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:indeterminateTint="@color/third_color"

android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/uploadImage_tv"
        app:layout_constraintStart_toStartOf="@+id/uploadImage_tv"
        app:layout_constraintTop_toBottomOf="@+id/uploadImage_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>