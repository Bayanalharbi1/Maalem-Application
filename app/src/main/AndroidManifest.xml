<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tourapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourApplication"
        android:usesCleartextTraffic="true"
        tools:replace="supportsRtl">
        <activity
            android:name=".AdminQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".AdminMainActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".onboarding.OnBoardActivity"
            android:exported="true" />
        <activity
            android:name=".user.UserMainActivity"
            android:exported="true" />
        <activity
            android:name=".influencer.InfluencerMainActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".authentication.SignUpActivity"
            android:exported="true" />
    </application>

</manifest>